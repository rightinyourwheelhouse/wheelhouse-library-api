{
  "name": "wheelhouse_library_api",
  "version": "1.0.0",
  "description": "API for the Wheelhouse Library App",
  "main": "api.js",
  "scripts": {
    "build": "run-s lint build-ts",
    "build-ts": "tsc",
    "serve": "node dist/api.js",
    "start": "run-s build-ts serve",
    "watch": "tsc -w & nodemon dist/api.js",
    "lint": "tslint src/**/*.ts"
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "delay": 500,
    "runOnChangeOnly": true
  },
  "author": "rafael@wheelhouse.be",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.1",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "node-pg-migrate": "^3.22.1",
    "passport-slack": "0.0.7",
    "pg": "^7.12.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
