{
  "name": "wheelhouse_library_api",
  "version": "1.0.0",
  "description": "API for the Wheelhouse Library App",
  "main": "api.js",
  "scripts": {
    "build-ts": "tsc",
    "postinstall": "npm run build-ts",
    "build:dev": "npm-run-all lint build-ts",
    "serve": "node dist/api.js",
    "start": "npm run serve",
    "watch": "tsc-watch --noClear --onSuccess 'node dist/api.js'",
    "lint": "tslint src/**/*.ts src/*.ts"
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "delay": 500,
    "runOnChangeOnly": true
  },
  "author": "rafael@wheelhouse.be",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/passport": "^1.0.1",
    "@types/pg": "^7.11.2",
    "@types/qrcode": "^1.3.4",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.44",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-session": "^1.16.2",
    "node-pg-migrate": "^3.22.1",
    "passport-slack": "0.0.7",
    "pg": "^7.12.0",
    "qrcode": "^1.4.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tsc-watch": "^4.0.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
